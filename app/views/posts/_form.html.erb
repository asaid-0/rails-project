<% if !@post.errors.full_messages.empty? %>
    <div class="alert alert-danger">
        <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for(@post, url: @post) do |f| %>
        <div class="form-group">
            <%= f.text_field :title, placeholder: "Enter Title", class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.text_area :content, placeholder: "Enter Content",  class: "form-control" %>
        </div>
        <input type="submit" value="<%= btn %>" class="btn btn-block btn-<%= btnc %>">
<% end %>